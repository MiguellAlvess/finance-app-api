                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/InternalServerErrorResponse"
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": ["Transactions"],
                "summary": "Create a new transaction for the authenticated user",
                "parameters": [
                    {
                        "name": "transaction",
                        "required": true,
                        "in": "body",
                        "schema": {
